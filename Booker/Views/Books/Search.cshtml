@model IEnumerable<Booker.Models.Book>
<h1>Search Books</h1>
@{
    ViewData["Title"] = "Search Books";
}
<form method="get" asp-action="Search">
    <div class="input-group">
        <input type="search" placeholder="Enter book title" value="@ViewData["BookTitle"]" name="BookTitle" style="width: 300px;" />
        <input type="search" placeholder="Enter book genre" value="@ViewData["BookGenre"]" name="BookGenre" style="width: 300px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

@if (Model.Count() == 0)
{
    <p>No books found with given parameter(s).</p>
}
else
{

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Author)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Genre)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Price)</th>
            <th scope="col">Delete</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model)
        {
            <tr>
                <th scope="row">@book.Id</th>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Price</td>
                <td>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id">Delete?</a>
                </td>
                <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}